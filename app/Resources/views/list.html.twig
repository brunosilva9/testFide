{# welcome.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    
    <table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Numero de Chip</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Sexo</th>
            <th>Color</th>
            <th>Fecha de Nacimiento</th>
            <th>Castrado</th>
            <th>RUT Humano</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for pet in pets %}
            <tr>
                <td>{{ pet.id }}</td>
                <td>{{ pet.chipNumber }}</td>
                <td>{{ pet.name }}</td>
                <td>{{ pet.lastName }}</td>
                <td>{{ pet.sex ? 'Hembra' : 'Macho' }}</td>
                <td>{{ pet.color }}</td>
                <td>{{ pet.dateOfBirth|date('d/m/Y') }}</td>
                <td>{{ pet.neutered ? 'Sí' : 'No' }}</td>
                <td>{{ pet.humanRut }}</td>
                <td>{{ pet.observations }}</td>
                <td>
                    <a href=''>Editar</a>
                    <a>/</a>
                    <form action="{{ path('deletePet', {'id': pet.id}) }}" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta mascota?')">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>



{% endblock %}

