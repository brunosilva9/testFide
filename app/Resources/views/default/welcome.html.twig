{% extends 'base.html.twig' %}

{% block body %}
    
    <div> 
        <h1>Welcome, {{ app.user.username }}!</h1>
        <a class="closeSession" href="{{ path('logout') }}">Cerrar sesión</a>
    </div>

    <div id="sidebar">
        <button class="sidebar-button" onclick="showComponnet('addPet')">Agregar mascota</button>
        <button class="sidebar-button" onclick="showComponnet('search')">Buscar mascota</button>
        <button class="sidebar-button" onclick="showComponnet('list')">Lista de mascotas</button>
        <button class="sidebar-button" onclick="showComponnet('addOwner')">Agregar dueño</button>


        <div id="componentContainer">
            <div id="addPet" style="display: none;">
                <h2>Componente de agregacion</h2>
                {% include 'addPet.html.twig' %}
            </div>
            <div id="search" style="display: none;">
                <h2>Componente de búsqueda</h2>
                {% include 'search.html.twig' %}
            </div>
            <div id="list" style="display: none;">
                <h2>Componente de lista de mascotas</h2>
                {% include 'list.html.twig' with {'pets': pets} %}
            </div>
            <div id="addOwner" style="display: none;">
                <h2>Componente de lista de mascotas</h2>
                {% include 'addOwner.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        function showComponnet(component) {
            var componertContainer = document.getElementById('componentContainer');
            var selectedComponet = document.getElementById(component);


            // Ocultar todos los componets
            var componets = componertContainer.children;
            for (var i = 0; i < componets.length; i++) {
                componets[i].style.display = 'none';
            }

            // Mostrar el componente seleccionado
            selectedComponet.style.display = 'block';
        }
    </script>
{% endblock %}

{% block stylesheets %}
    <style>
        .sidebar {
            width: 200px;
            background-color: #f2f2f2;
            padding: 10px;
        }

        .sidebar-button {
            display: block;
            margin-bottom: 5px;
            text-decoration: none;
            color: #333;
        }

        .sidebar-button:hover {
            background-color: #ccc;
        }
    </style>
{% endblock %}
